<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/track_categoryIconImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/shuffle"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/track_categoryNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/track_categoryIconImageView"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/track_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/track_categoryIconImageView"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progressDrawable="@drawable/track_progress_bar" />

</RelativeLayout>
