<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Controller.CastFragment">

    <TextView
        android:id="@+id/cast_fragment_random_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random Catch-Up"
        android:textColor="@color/primary"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <ImageButton
        android:id="@+id/cast_randomizator_button_view"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_below="@id/cast_fragment_random_title_view"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_category_cast"
        android:src="@drawable/shuffle" />

    <TextView
        android:id="@+id/cast_fragment_category_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textColor="@color/primary"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/cast_randomizator_button_view"
        />

    <ListView
        android:id="@+id/button_category_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cast_fragment_category_title_view"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="-5dp" />

</RelativeLayout>