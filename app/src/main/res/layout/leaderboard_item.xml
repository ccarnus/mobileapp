<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:elevation="8dp"
    android:padding="10dp"
    android:id="@+id/leader_board_item_main_container_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/leader_board_item_profile_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/leader_board_item_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/leader_board_item_profile_view"
            android:text="Name"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/leader_board_item_role_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leader_board_item_name_view"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-1dp"
            android:layout_toEndOf="@+id/leader_board_item_profile_view"
            android:text="Role"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/leader_board_item_score_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:text="score"
            android:textSize="16dp" />


    </RelativeLayout>

</LinearLayout>